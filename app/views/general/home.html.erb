<table>

  <tr>

    <td class="category_bar">
      <div class="category_bar bar">
      <% @categories.each do |category| %>
          <p class="category_name"> <%= link_to category, {:controller => "general", :action => "searchcategory", :q => category} %> </p>
      <% end %>
      </div>
    </td>

    <td>
      <table class="soft_border">
        <tr>

          <td></td>
          <td>
            <p class="title_category_home">Movies</p>
            <% @list = @featured.where(:category => 'Movies').limit(3) %>
            <%= render 'listing' %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td>

            <p class="title_category_home">Music</p>

            <% @list = @featured.where(:category => 'Music').limit(3) %>
            <%= render 'listing' %>

          </td>

        </tr>

        <tr>
          <td></td>
          <td>
            <p class="title_category_home">Sport</p>
            <% @list = @featured.where(:category => 'Sport').limit(3) %>
            <%= render 'listing' %>
          </td>
        </tr>

      </table>
    </td>
  </tr>


</table>